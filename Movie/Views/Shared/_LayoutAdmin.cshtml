
@{
    Layout = null;
    
}

@helper IsMenuSelected(string actionName, string controllerName, string className)
{
    var conname = ViewContext.RouteData.Values["controller"].ToString().ToLower();
    var actname = ViewContext.RouteData.Values["action"].ToString().ToLower();

    if (conname == controllerName.ToLower() && actname == actionName.ToLower())
    {
        @className;
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Lib/chosen_v1.7.0/chosen.min.css">
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Lib/chosen_v1.7.0/chosen.jquery.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="myheader">
        <nav class="navbar">
            <div class="mycontainer">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#" onclick="return false">
                        <div onclick="OpenMenu()">
                            <div class="myIcon"></div>
                            <div class="myIcon"></div>
                            <div class="myIcon"></div>
                        </div>
                    </a>
                </div>
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">
                        SSO Movie
                    </a>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li><p class="navbar-text text-primary"><span class="glyphicon glyphicon-user"></span> Hi! Admin</p></li>
                    <li><a href="#"><span class="glyphicon glyphicon-off"></span> Đăng Xuất</a></li>
                    
                </ul>
            </div>
        </nav>
    </div>

    


    <div class="mycontent">
        <div id="myleft" class="myleft">
            <ul class="nav nav-pills nav-stacked">
                <li class="@IsMenuSelected("Index","Admin", "active")"><a href="/Admin">Trang chủ</a></li>
                <li class="@IsMenuSelected("AddMovie","Admin", "active")"><a href="/Admin/AddMovie">Thêm Phim Mới</a></li>
                <li class="@IsMenuSelected("MovieList","Admin", "active")"><a href="/Admin/MovieList">Danh Sách Phim</a></li>
            </ul>
        </div>


        <div id="myright" class="myright">
            @RenderBody()

        </div>
    </div>

    <div class="clearfix"></div>

   

    <div id="myfooter" class="myfooter1">
        <p class="text-center">Copyright &copy; Khóa luận SSO 2017</p>
        <p class="text-center">Development: thachchibao10011@gmail.com</p>
    </div>
    


</body>
</html>


<style>

    html {
        height: 100%;
        box-sizing: border-box;
    }

    *,
    *:before,
    *:after {
        box-sizing: inherit;
    }

    body {
        position: relative;
        margin: 0;
        background-color: rgb(246, 249, 252);
        min-height: 100%;
        padding-bottom: 6rem;
    }

    .mycontainer {
        margin-left: 30px;
        margin-right: 30px;
    }

    .myheader {
        width: 100%;
        top: 0;
        position: fixed;
        background-color: white;
        z-index: 100;
        height: 60px;
        border-bottom: 1px solid green;
    }

    .mycontent {
        margin-top: 60px;
    }
    

    .myleft {
        width: 20%;
        position: fixed;
        top: 0px;
        left: 0px;
        margin-top: 60px;
        height: 100%;
        border-right: 1px solid green;
        background-color: white;
    }

    .myright {
        width: 80%;
        float: right;
        padding: 20px;
    }

    .myright2 {
        width: 100%;
        padding: 20px;
    }

    .myIcon {
        width: 16px;
        height: 3px;
        background-color: black;
        margin: 2px 0;
    }

    .myfooter1 {
        background-color: white;
        box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        position: absolute;
        right: 0;
        bottom: 0;
        width: 80%;
        clear: both;
    }

    .myfooter2 {
        background-color: white;
        box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
        position: absolute;
        right: 0;
        bottom: 0;
        width: 100%;
        clear:both;
    }

    
    
</style>

<script>

    function OpenMenu() {
        var myleft = $('#myleft');
        var myright = $('#myright')
        var myfooter = $('#myfooter')

        if (myleft.hasClass('hide')) {
            myleft.removeClass('hide'); // show
            myleft.addClass('myleft');

            myright.addClass('myright');
            myright.removeClass('myright2');

            myfooter.addClass('myfooter1');
            myfooter.removeClass('myfooter2');

        } else {
            myleft.addClass('hide'); // hide
            myleft.removeClass('myleft');

            myright.removeClass('myright');
            myright.addClass('myright2');

            myfooter.removeClass('myfooter1');
            myfooter.addClass('myfooter2');
        }
    }
   
</script>